# this is the kdsubject model
 
type kdsubject {
  id: ID! @id
  subjectTitle: String!
  description: String!
  chapters: [kdchapter] @relation(name:"ALLCHAPTERS",link: INLINE)
}

# this is the kdchapter model

type kdchapter {
  id: ID! @id
  subjectTitle: String!
  chapterTitle: String!
  description: String!
  topics: [kdtopic] @relation(name: "ALLTOPICS",link: INLINE)  
  subjectId: String
  
}

#this is the kdtopic model

type kdtopic {
  id: ID! @id
  chapterTitle: String!
  description: String!
  topicTitle:String!
  chapterId: String
  pages: [kdpage]  @relation(name: "ALLPAGES",link: INLINE) 
  
}

#this is the kdpage model

type kdpage {
  id: ID! @id
  topicTitle: String!
  topicId: String
  pageType:String!
  pageTitle: String!
  sections:[kdsection]  @relation(name: "ALLSECTIONS",link: INLINE)
  
}

#this is the kdsection model

type kdsection {
  id: ID! @id
  sectionTitle: String
  topicTitle: String
  sectionType: [kdsectiontype] @relation(name: "ALLKDSECTIONTYPES", link:INLINE)
  
}

#this is the kdsectiontype model

type kdsectiontype {
  id: ID! @id
  videos: [kdsectionvideo] @relation(name:"ALLKDSECTIONVIDEOS", storage: Embedded)
  theoryImage: [kdsectiontheoryimage] @relation(name: "ALLKDSECTIONTHEORYIMAGE", storage: Embedded)
  theoryRichText: [kdsectiontheoryrichtext] @relation(name: "ALLKDSECTIONTHEORYTEXT", storage: Embedded)
  quiz:[kdsectionquiz] @relation(name: "ALLKDSECTIONqUIZ", storage: Embedded)
  assignment: [kdsectionassignment] @relation(name: "ALLKDSECTIONASSIGNMENT", storage: Embedded)
 
}

#this is kdsection video schema

type kdsectionvideo @embedded{
  id: ID! @id
  link: String
}

#this is the kdsectiontheory image schema

type kdsectiontheoryimage @embedded{
  id: ID! @id
  imagePath: String
}

#this is the kdsectiontheoryrichtext schema

type kdsectiontheoryrichtext @embedded{
  id: ID! @id
  textData: String
}

#this is the kdsectionquiz schema

type kdsectionquiz @embedded{
  id: ID! @id
  questionsImagePath: String
  answerImagePath: String
  answerKey:String
  videoSolutionUrl: [kdsectionvideosolurl] @relation(name:"ALLKDVIDEOSOLUTIONURLS", storage:embedded)
}

#this is the kdsectionvideosolurl schema

type kdsectionvideosolurl @embedded{
  id: ID! @id
  videoUrl: String
}

#this is the kdsectionassignment schema

type kdsectionassignment @embedded{
  id: ID! @id
  questionImagePath: String
  answerImagePath: String
  assignmentVideoSolution: [kdsectionvideosolurl] 
}