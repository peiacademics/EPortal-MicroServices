# this is the kdsubject model

type kdsubject {
  id: ID! @id
  subjectTitle: String!
  description: String!
  chapters: [kdchapter]
}

# this is the kdchapter model

type kdchapter {
  id: ID! @id
  subjectTitle: String!
  chapterTitle: String!
  description: String!
  topics: [kdtopic]
  subjectId: String
}

#this is the kdtopic model

type kdtopic {
  id: ID! @id
  chapterTitle: String!
  description: String!
  topicTitle:String!
  chapterId: String
  pages: [kdpage]
}

#this is the kdpage model

type kdpage {
  id: ID! @id
  topicTitle: String!
  topicId: String
  pageType:String!
  pageTitle: String!
}

#this is the kdsection model

type kdsection {
  id: ID! @id
  sectionTitle: String
  topicTitle: String
  sectionType: [kdsectiontype]
}

#this is the kdsectiontype model

type kdsectiontype {
  videos: [kdsectionvideo]
  theoryImage: [kdsectiontheoryimage]
  theoryRichText: [kdsectiontheoryrichtext]
  quiz:[kdsectionquiz]
  assignment: [kdsectionassignment]

}

#this is kdsection video schema

type kdsectionvideo {
  id: ID! @id
  link: String
}

#this is the kdsectiontheory image schema

type kdsectiontheoryimage {
  id: ID! @id
  imagePath: String
}

#this is the kdsectiontheoryrichtext schema

type kdsectiontheoryrichtext {
  id: ID! @id
  textData: String
}

#this is the kdsectionquiz schema

type kdsectionquiz {
  id: ID! @id
  questionsImagePath: String
  answerImagePath: String
  answerKey:String
  videoSolutionUrl: [kdsectionvideosolurl]
}

#this is the kdsectionvideosolurl schema

type kdsectionvideosolurl {
  id: ID! @id
  videoUrl: String
}

#this is the kdsectionassignment schema

type kdsectionassignment {
  id: ID! @id
  questionImagePath: String
  answerImagePath: String
  assignmentVideoSolution: [kdsectionvideosolurl]
}